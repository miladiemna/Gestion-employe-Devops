pipeline {
    agent any
    tools {
        maven 'maven'
    }
    
    
    stages {
        stage('Clone Repository from git') {
            steps {
            checkout scmGit(branches: [[name: '*/develop']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/miladiemna/Gestion-employe-Devops']])
            }
        } 

        stage('SonarQube Analysis') {
            steps {
                // Étape pour exécuter l'analyse SonarQube
                    dir('./Back-devops')  {
                    sh 'mvn sonar:sonar' // Commande Maven pour l'analyse SonarQube
                }
            }
        }
 }
 
 }