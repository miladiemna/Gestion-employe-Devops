pipeline {
    agent any
    tools {
        nodejs 'nodejs'
        
    }
    stages {
        stage('Get Code from Github') {
                steps {
                        checkout scmGit(branches: [[name: '*/develop']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/miladiemna/Gestion-employe-Devops']])
                    }
        }


        stage('Build Front'){
            steps{
                dir('./Front-Devops') {
                    sh 'npm install'
                    sh 'npm run build'
                }
            }
        }

        stage('Sonar Scanner') {
            steps{
                dir('./Front-Devops') {
                    sh 'npm run sonar'
                }
            }
        }

         stage('Publish To Nexus') {
            steps {
                dir('./front') {
                withCredentials([file(credentialsId: 'npmcred', variable: 'mynpmrc')]) {
                    script{
                        sh "npm publish --userconfig ${mynpmrc} --loglevel verbose"
                    }
                }
            }}
         }



           /*stage('docker build'){
             steps {
               sh 'docker build -f DockerfileFront -t miladiemna/frontendevops.'
             }
           }
      
            stage('Push to docker hub'){
            steps{
                script{
                    withDockerRegistry(credentialsId: 'dockerhubpwd', toolName: 'docker') {
                        sh "docker push miladiemna/frontendevops"
                    }
                }
            }
        }
           // stage('Deploy to K8s') {
         //   steps {
          //      dir('./frontend') {
            //    script {
             //       kubernetesDeploy(configs: "deployementbackend.yaml", kubeconfigId: "kubernetes")
              //      }
               // }
            //}
       // }*/
        
    }
   post {
    success {
      slackSend color: '#36a64f', message: "Deployment of frontend succeeded"
    }
    failure {
      slackSend color: '#ff0000', message: "Deployment of frontend failed"
    }
  }
    

}