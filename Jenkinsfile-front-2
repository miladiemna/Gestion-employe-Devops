pipeline {
    agent any
    tools {
        nodejs 'nodejs'
        
    }
    stages {
        stage('Get Code from Github') {
                steps {
                        checkout scmGit(branches: [[name: '*/develop']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/miladiemna/Gestion-employe-Devops']])
                    }
        }


        stage('Build Front'){
            steps{
                dir('./Front-Devops') {
                    sh 'npm install'
                    sh 'npm run build'
                }
            }
        }

        stage('Sonar Scanner') {
            steps{
                dir('./Front-Devops') {
                    sh 'npm run sonar'
                }
            }
        }

         stage('Publish To Nexus') {
            steps {
                dir('./Front-Devops') {
                withCredentials([file(credentialsId: 'npmcred', variable: 'npmrc')]) {
                    script{
                        sh "npm publish --userconfig ${npmrc} --loglevel verbose"
                    }
                }
            }}
         }



           stage('docker build'){
             steps{
                dir('./Front-Devops') {
                    sh 'npm run sonar'
                }
            }
           }
      
        stage('Push to docker hub'){
           steps{
                dir('./Front-Devops') {
                    sh 'npm run sonar'
                }
            }
        }
        stage('Deploy to K8s') {
           steps{
                dir('./Front-Devops') {
                    sh 'npm run sonar'
                }
            }
       }
        
    }
   post {
    success {
      slackSend color: '#36a64f', message: "Deployment of frontend succeeded from k8s"
    }
    failure {
      slackSend color: '#ff0000', message: "Deployment of frontend failed from k8s"
    }
  }
    

}